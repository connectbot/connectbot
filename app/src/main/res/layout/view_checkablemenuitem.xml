<merge xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView
		android:id="@+id/icon"
		style="@style/ListItemIcon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:contentDescription="@null"
		/>

	<TextView
		android:id="@+id/title"
		style="@style/ListItemFirstLineText.WithIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left|start"
		/>

	<TextView
		android:id="@+id/summary"
		style="@style/ListItemSecondLineText.WithIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:layout_toLeftOf="@+id/checkbox_switch"
		android:layout_toStartOf="@id/checkbox_switch"
		android:gravity="left|start"
		/>

	<androidx.appcompat.widget.SwitchCompat
		android:id="@id/checkbox_switch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:clickable="false"
		android:contentDescription="@null"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:importantForAccessibility="no"
		tools:ignore="UnusedAttribute"
		/>

</merge>
